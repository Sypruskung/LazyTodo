<Page
    x:Class="LazyTodo.TodoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LazyTodo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding DefaultViewModel.Item, RelativeSource={RelativeSource Self}}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
	<Page.Resources>
		<Storyboard x:Name="ToDoStoryboard">
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="top_stack">
				<EasingDoubleKeyFrame KeyTime="0:0:1" Value="0"/>
				<EasingDoubleKeyFrame KeyTime="0:0:1.7" Value="257.407"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="top_stack">
				<EasingDoubleKeyFrame KeyTime="0:0:1" Value="0"/>
				<EasingDoubleKeyFrame KeyTime="0:0:1.7" Value="9.259"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="ContentRoot">
				<EasingDoubleKeyFrame KeyTime="0:0:1" Value="0"/>
				<EasingDoubleKeyFrame KeyTime="0:0:1.7" Value="-412.963"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="ContentRoot">
				<EasingDoubleKeyFrame KeyTime="0:0:1" Value="0"/>
				<EasingDoubleKeyFrame KeyTime="0:0:1.7" Value="-9.259"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="edit_grid">
				<EasingDoubleKeyFrame KeyTime="0:0:1" Value="0"/>
				<EasingDoubleKeyFrame KeyTime="0:0:1.7" Value="248.148"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="edit_grid">
				<EasingDoubleKeyFrame KeyTime="0:0:1" Value="0"/>
				<EasingDoubleKeyFrame KeyTime="0:0:1.7" Value="-1.852"/>
			</DoubleAnimationUsingKeyFrames>
		</Storyboard>
	</Page.Resources>

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel x:Name="top_stack" Grid.Row="0" Margin="-248,-10,267,10.167" RenderTransformOrigin="0.5,0.5">
        	<StackPanel.RenderTransform>
        		<CompositeTransform/>
        	</StackPanel.RenderTransform>
            <TextBlock x:Name="lazytodo" Text="LazyTODO" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,12,-1.167,0"/>
            <TextBlock x:Name="todo_title" Text="Todo Title" Margin="0,-6.5,-7.167,26.5" Style="{ThemeResource HeaderTextBlockStyle}" CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}"/>
        </StackPanel>

        <!--TODO: Content should be placed within the following grid-->
        <ScrollViewer x:Name="ContentRoot" Margin="409,8.833,-409,1" Grid.Row="1" RenderTransformOrigin="0.5,0.5">
        	<ScrollViewer.RenderTransform>
        		<CompositeTransform/>
        	</ScrollViewer.RenderTransform>
            <StackPanel>
                <ScrollViewer HorizontalScrollBarVisibility="Auto">
                	<StackPanel Orientation="Horizontal" >
                		<Image 
                			Margin="10, 0"
                			Height="100"
                			Width="100" 
                			Source="Assets/SmallLogo.png"/>
                		<Grid Margin="10, 0">
                			<Image  
                				Height="100"
                				Width="100" 
                				Source="Assets/SmallLogo.png"/>
                			<MediaElement 
                				x:Name="myMediaElement"
                				Height="100" 
                				Width="100" 
                				Source="/Assets/scream.wav"
                				AutoPlay="False"/>
                			<Button 
                				BorderThickness="0"
                				HorizontalAlignment="Left" 
                				VerticalAlignment="Center"
                				Width="100"
                				Height="100"/>
                		</Grid>
                		<Image 
                			Margin="10, 0"
                			Height="100"
                			Width="100" 
                			Source="Assets/SmallLogo.png"/>
                		<Image 
                			Margin="10, 0"
                			Height="100"
                			Width="100" 
                			Source="Assets/SmallLogo.png"/>
                		<Image 
                			Margin="10, 0"
                			Height="100"
                			Width="100" 
                			Source="Assets/SmallLogo.png"/>
                	</StackPanel>
                </ScrollViewer>
                <StackPanel Margin="20">
                	<StackPanel Margin="0,0,0,20">
                		<TextBlock x:Name="when" 
                			Text="When" 
                			TextWrapping="Wrap" 
                			Style="{StaticResource SubheaderTextBlockStyle}"/>
                		<TextBlock x:Name="when_textblock" 
                			Margin="10"
                			TextWrapping="Wrap"
                			Text="{Binding TodoDateTime}" 
                			Style="{StaticResource ListViewItemContentTextBlockStyle}"/>
                	</StackPanel>
                	<StackPanel Margin="0,0,0,20">
                		<TextBlock x:Name="where" 
                			Text="Where"
                			TextWrapping="Wrap"
                			Style="{StaticResource SubheaderTextBlockStyle}"/>
                		<TextBlock x:Name="where_textblock" 
                			Margin="10"
                			Text="Chulalongkorn University" 
                			TextWrapping="Wrap" 
                			Style="{StaticResource ListViewItemContentTextBlockStyle}"/>
                	</StackPanel>
                	<StackPanel Margin="0,0,0,20">
                		<TextBlock x:Name="description" 
                			Text="Description"
                			TextWrapping="Wrap"
                			Style="{StaticResource SubheaderTextBlockStyle}"/>
                		<TextBlock x:Name="description_textblock" 
                			Margin="10"
                			TextWrapping="Wrap" 
                			Text="{Binding Description}" 
                			Style="{StaticResource ListViewItemContentTextBlockStyle}"/>
                	</StackPanel>
                    
                </StackPanel>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- App Bar -->
        <Grid x:Name="edit_grid" Grid.Row="1" Margin="-249,431.833,249,1" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5">
        	<Grid.RenderTransform>
        		<CompositeTransform/>
        	</Grid.RenderTransform>
            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                <AppBarButton x:ConnectionId='1'
                    x:Name="EditButton"
                    Icon="Edit" 
                    Label="Edit"
                                            />
            </StackPanel>
        </Grid>
        
    </Grid>

    
</Page>


<Page
    x:Class="LazyTodo.EditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LazyTodo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="19,0,19,0">
            <TextBlock Text="Title" Style="{ThemeResource SubheaderTextBlockStyle}" Margin="0,12,0,0"/>
            <TextBox Text="{Binding TodoTitle}" Margin="0,10,0,26.5"/>
        </StackPanel>

        <!--TODO: Content should be placed within the following grid-->
        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,9.5,19,0">

            <StackPanel>
                <ScrollViewer HorizontalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Horizontal" >
                        <Image 
                            Margin="10, 0"
                            Height="100"
                            Width="100" 
                            Source="Assets/SmallLogo.png"/>
                        <Grid Margin="10, 0">
                            <Image  
                                Height="100"
                                Width="100" 
                                Source="Assets/SmallLogo.png"/>
                            <MediaElement 
                                x:Name="myMediaElement"
                                Height="100" 
                                Width="100" 
                                Source="/Assets/scream.wav"
                                AutoPlay="False"/>
                            <Button 
                                BorderThickness="0"
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center"
                                Width="100"
                                Height="100"/>
                        </Grid>
                        <Image 
                            Margin="10, 0"
                            Height="100"
                            Width="100" 
                            Source="Assets/SmallLogo.png"/>
                        <Image 
                            Margin="10, 0"
                            Height="100"
                            Width="100" 
                            Source="Assets/SmallLogo.png"/>
                        <Image 
                            Margin="10, 0"
                            Height="100"
                            Width="100" 
                            Source="Assets/SmallLogo.png"/>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Margin="20">
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock 
                            Text="When" 
                            TextWrapping="Wrap" 
                            Style="{StaticResource SubheaderTextBlockStyle}"/>
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <DatePicker 
                                x:Name="MyDatePicker" 
                                Grid.Column="0"/>
                            <TimePicker 
                                x:Name="MyTimePicker" 
                                MinuteIncrement="5" 
                                ClockIdentifier="24HourClock" 
                                Grid.Column="1"/>
                        </Grid>
                        
                    </StackPanel>
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock 
                            Text="Where"
                            TextWrapping="Wrap"
                            Style="{StaticResource SubheaderTextBlockStyle}"/>
                        <TextBlock 
                            Margin="10"
                            Text="Chulalongkorn University"
                            TextWrapping="Wrap" 
                            Style="{StaticResource ListViewItemContentTextBlockStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock 
                            Text="Description"
                            TextWrapping="Wrap"
                            Style="{StaticResource SubheaderTextBlockStyle}"/>
                        <TextBlock 
                            Margin="10"
                            TextWrapping="Wrap" 
                            Text="{Binding Description}" 
                            Style="{StaticResource ListViewItemContentTextBlockStyle}"/>
                    </StackPanel>

                    
                    
                </StackPanel>

            </StackPanel>
            
            
        </Grid>
        
        <!-- App Bar -->
        <Grid Grid.Row="2">
            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                <AppBarButton x:ConnectionId='1' x:Name="DoneButton" Icon="Accept" Label="Done"                         />
                <AppBarButton x:ConnectionId='2' x:Name="CancelButton" Icon="Cancel" Label="Cancel"                           />
            </StackPanel>
        </Grid>
        
    </Grid>
</Page>


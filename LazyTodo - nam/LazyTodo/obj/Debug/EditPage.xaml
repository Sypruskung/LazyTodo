	</Page.Resources>

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel x:Name="stackPanel" 
            Grid.Row="0" Margin="20">
        	<StackPanel.RenderTransform>
        		<CompositeTransform/>
        	</StackPanel.RenderTransform>
            <TextBlock 
                Text="Title" 
                Style="{ThemeResource SubheaderTextBlockStyle}" 
                Margin="0,12,0,0"/>
            <TextBox 
                x:Name="TitleBox"
                Text="{Binding TodoTitle}" 
                Margin="0,10,0,26.5"/>
        </StackPanel>

        <!--TODO: Content should be placed within the following grid-->
        <ScrollViewer Grid.Row="1" x:Name="ContentRoot" RenderTransformOrigin="0.5,0.5">
        	<ScrollViewer.RenderTransform>
        		<CompositeTransform/>
        	</ScrollViewer.RenderTransform>

            <StackPanel>

                <ScrollViewer 
                    HorizontalScrollBarVisibility="Auto">

                	<StackPanel Orientation="Horizontal">
                		<Button x:ConnectionId='3'
                			Margin="20, 5, 0, 5"
                			Width="100"
                			Height="100" 
                			                             
                			BorderThickness="0" Background="DarkCyan">
                			<TextBlock Text="AddMedia"/>
                		</Button>
                    
                		<ListView x:Name="AttachmentListView" ItemsSource="{Binding}">
                        
                			<ListView.ItemsPanel>
                				<ItemsPanelTemplate>
                					<StackPanel Orientation="Horizontal"/>
                				</ItemsPanelTemplate>
                			</ListView.ItemsPanel>
                            
                			<ListView.ItemTemplate>
                				<DataTemplate>
                					<Grid Margin="20,5,0,5" Background="DarkOrchid">
                						<Image Height="100" Width="100" Source="{Binding}">
                							<!--
                                            <Image.Source>
                                                <BitmapImage 
                                                    UriSource="{Binding}" 
                                                    CreateOptions="None"/>
                                            </Image.Source>
                                            -->

                						</Image>
                						<MediaElement 
                							Height="100" 
                							Width="100" 
                							AutoPlay="False"/>
                					</Grid>
                				</DataTemplate>
                			</ListView.ItemTemplate>
                		</ListView>
                    
                	</StackPanel>

                </ScrollViewer>

                <StackPanel 
                    Margin="20">
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock 
                            Text="When" 
                            TextWrapping="Wrap" 
                            Style="{StaticResource SubheaderTextBlockStyle}"/>
                        <Grid Margin="0, 10">
                            <Grid.ColumnDefinitions>
                            	<ColumnDefinition Width="*"/>
                            	<ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <DatePicker 
                                x:Name="MyDatePicker" 
                                Grid.Column="0"/>
                            <TimePicker 
                                x:Name="MyTimePicker" 
                                MinuteIncrement="5" 
                                ClockIdentifier="24HourClock" 
                                Grid.Column="1"/>
                        </Grid>
                        
                    </StackPanel>
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock 
                            Text="Where"
                            TextWrapping="Wrap"
                            Style="{StaticResource SubheaderTextBlockStyle}"/>
                        <TextBlock 
                            Margin="10"
                            Text="Chulalongkorn University"
                            TextWrapping="Wrap" 
                            Style="{StaticResource ListViewItemContentTextBlockStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock 
                            Text="Description"
                            TextWrapping="Wrap"
                            Style="{StaticResource SubheaderTextBlockStyle}"/>
                        <TextBox
                            x:Name="DescriptionBox"
                            Margin="0, 10"
                            Height="100"
                            TextWrapping="Wrap" 
                            Text="{Binding Description}"/>
                    </StackPanel>

                </StackPanel>

            </StackPanel>
            
            
        </ScrollViewer>
        
        <!-- App Bar -->
        <Grid x:Name="grid" Grid.Row="2" Margin="0" RenderTransformOrigin="0.5,0.5">
        	<Grid.RenderTransform>
        		<CompositeTransform/>
        	</Grid.RenderTransform>
            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                <AppBarButton x:ConnectionId='1' x:Name="DoneButton" Icon="Accept" Label="Done"                         />
                <AppBarButton x:ConnectionId='2' x:Name="CancelButton" Icon="Cancel" Label="Cancel"                           />
            </StackPanel>
        </Grid>
        
    </Grid>
</Page>

